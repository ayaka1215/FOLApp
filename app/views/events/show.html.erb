<div class="container">
  <div class="d-flex">
    <div class="ml-auto events__link-box">
        <%= link_to '一覧へ戻る', events_path, class: 'btn btn-outline-dark' %>
        <% if current_user.admin %>
          <%= link_to '編集', edit_event_path(@event), class: 'btn btn-outline-dark' %>
        <% end %>
    </div>
  </div>
    <div class="card-header">
      <h4><%= @event.title %></h4>
    </div>
    <div class="card-body">
      <p class="card-text">
      <p class="contents-title">イベント概要</p>
      <p class="contents-text"><%= simple_format(@event.content) %></p>
    </div>

    <%= form_for @reservation do |f| %>
      <%= f.hidden_field :event_id %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit 'このイベントに参加する', class: 'btn btn-outline-dark' %>
    <% end %>
    <%= link_to '一覧へ戻る', events_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
